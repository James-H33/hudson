 etc/com.sec.feature.irda_service.xml | 20 ++++++++++++++++++++
 jf-common.mk                         |  4 ++++
 2 files changed, 24 insertions(+)
 create mode 100644 etc/com.sec.feature.irda_service.xml

diff --git a/etc/com.sec.feature.irda_service.xml b/etc/com.sec.feature.irda_service.xml
new file mode 100644
index 0000000..14fbb86
--- /dev/null
+++ b/etc/com.sec.feature.irda_service.xml
